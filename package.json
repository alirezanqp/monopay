{
  "name": "monopay-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "FORCE_COLOR=1 turbo run build",
    "lint": "FORCE_COLOR=1 turbo run lint",
    "test": "FORCE_COLOR=1 turbo run test",
    "format": "prettier --write \"**/*.{ts,md}\""
  },
  "devDependencies": {
    "lint-staged": "^12.4.1",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@1.22.18"
}
